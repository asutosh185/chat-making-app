<h4 class="ui center aligned medium icon header">
  <i class="circular olive envelope icon"></i>
  Say something
</h4>

<div class="ui two column grid">
    <div class="twelve wide column">
        <div class="ui fluid raised card card chatbox">
          <div class="content">
                <div class="ui feed">
                  <% @messages.each do |message| %>
                  <%= render @messages %>
                <% end %>
          
                </div>
            </div>
            <div class="extra content">
                                <form class="ui reply form">
                    <div class="field">
                       <div class="ui fluid  icon input">
                           <input type="text" placeholder="Enter a massage">
                                <i class="bordered inverted olive edit icon "></i> 
                    </div>
                    </div>
                   
                  </form>
            </div>
        </div>
    </div>


    <div class="four wide column">
         <div class="ui fulid raised card chatbox">
           <div class="content">   
                <div class="ui inverted vertical pointing menu">
                  <a class="active item">
                    Home
                  </a>
                  <a class="item">
                    Messages
                  </a>
                  <a class="item">
                    Friends
                  </a>
                </div>
            </div>
        </div>
    </div>
</div>